<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/Dracula">

    <TextView
        android:id="@+id/artistnotxp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/titlenotxp"
        android:layout_centerVertical="true"
        android:lines="1"
        android:text="Ed Sharren"
        android:textColor="@color/White"
        android:textSize="9sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/albumartnotexp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/musiccd" />

    <TextView
        android:id="@+id/titlenotxp"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:lines="1"
        android:text="Shape OF You"
        android:textColor="@color/White"
        android:textSize="12sp"
        android:textStyle="bold" />
</RelativeLayout>